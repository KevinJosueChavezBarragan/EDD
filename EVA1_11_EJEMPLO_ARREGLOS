//PEDIR NUMERO DE GRUPOS,PEDIR NUMERO DE ALUMNOS POR GRUPO,CAPTURAR CALIFICACIONES
package eva1_11_ejemplo_arreglos;

import java.util.Scanner;

public class EVA1_11_EJEMPLO_ARREGLOS {

    public static void main(String[] args) {

        int arregloCali[][];
        //PRIMER DIMENSION --> GRUPOS
        //SEGUNDA DIMENSION --> ESTUDIANTES * GRUPO
        //DETERMINAR LOS GRUPOS
        Scanner leer = new Scanner(System.in);
        System.out.println("Cuantos grupos vas a capturar?: ");
        int iGrupo = leer.nextInt();
        arregloCali = new int[iGrupo][];
        for (int i = 0; i < arregloCali.length; i++) {
            System.out.println("Cuantos estudiantes hay en el grupo " + (i + 1));
            int iEst = leer.nextInt();
            arregloCali[i] = new int[iEst];
        }
        //PARA CADA GRUPO; CUANTOS ESTUDIANTES NECESITAS?
        arregloCali[0] = new int[10];
    }
    
}
